/* Apply identical styles to dijit tree menus */
.lotusui30 .lotusMenu .lotusTree .dijitTreeRow{margin:0;padding:6px 20px 6px 10px;border-width:0;color:#000 !important;font-weight:bold;text-decoration:none !important;}
.lotusui30 .lotusMenu .lotusTree .dijitTreeRow.lotusSelected{margin:-1px 0;padding-right:20px;border-width:1px 0;}
.lotusui30 .lotusMenu .lotusTree .dijitTreeRow a{text-decoration:none !important;}
/* Dojo-only menu styles */
.lotusui30 .lotusMenu .lotusTree .dijitTreeRow.lotusSelected a { color: #fff !important;}
.lotusui30 .lotusMenu .lotusTree .lotusSelected .dijitTreeExpando {margin-right: 5px;}
.lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeRow, /* Normal root */
.lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeRow a, /* Link root */
.lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeIsRoot .dijitTreeRow, /* Visible root when showRoot=false */
.lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeIsRoot .dijitTreeRow a /* Link root when showRoot=false */
{font-weight: bold;}
.lotusui30 .lotusMenu .lotusTree .dijitTreeContainer .dijitTreeRow, /* Normal child items */
.lotusui30 .lotusMenu .lotusTree .dijitTreeContainer .dijitTreeRow a, /* Link child items */
.lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeIsRoot .dijitTreeContainer .dijitTreeRow, /* Visible child items when showRoot=false */
.lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeIsRoot .dijitTreeContainer .dijitTreeRow a /* Link child items when showRoot=false */
{font-weight: normal;}





.lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeRow, .lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeRow a, .lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeIsRoot .dijitTreeRow, .lotusui30 .lotusMenu .lotusTree .dijitTreeIsRoot .dijitTreeIsRoot .dijitTreeRow a{font-weight:normal;}
.lotusui30 .lotusMenu .lotusTree .dijitTreeRow.lotusSelected{color:#000 !important;background-color:transparent;border-color:transparent;font-weight:bold;}
